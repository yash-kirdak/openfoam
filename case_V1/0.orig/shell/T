FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/shell";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 500;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    upper
    {
        type            inletOutlet;
        value           $internalField;
        inletValue      $internalField;
    }
    lower
    {
        type            fixedValue;
        value           $internalField;
    }
    walls
    {
        type            fixedValue;
        value           $internalField;
    }


    shell_to_solid
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           $internalField;
        Tnbr            T;
        kappaMethod     fluidThermo;
    }

    solid_to_shell
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           $internalField;
        Tnbr            T;
        kappaMethod     fluidThermo;
    }
}

// ************************************************************************* //
